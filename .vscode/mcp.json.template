{
	"servers": {
		"mcp-shell-server": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-shell-server@2.1.5"
			],
			"env": {
				"MCP_DISABLED_TOOLS": "${input:disabled_tools}",
				"MCP_SHELL_DEFAULT_WORKDIR": "${input:default_workdir}",
				"MCP_SHELL_ALLOWED_WORKDIRS": "${input:default_workdir}",
				"MCP_SHELL_SECURITY_MODE": "${input:security_mode}",
				"MCP_SHELL_MAX_EXECUTION_TIME": "300",
				"MCP_SHELL_MAX_MEMORY_MB": "1024"
			}
		},
		"assoc-memory": {
			"type": "stdio",
			"command": "${userHome}/.venv/bin/python",
			"args": [
				"-m",
				"mcp_assoc_memory.server",
				"--config",
				"${workspaceFolder}/config.json"
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"MCP_LOG_LEVEL": "INFO"
			}
		},
		"mcp-sampler": {
			"type": "stdio",
			"command": "node",
			"args": [
				"${workspaceFolder}/build/index.js"
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "production"
			}
		}
	},
	"inputs": [
		{
			"id": "disabled_tools",
			"type": "promptString",
			"description": "Enter any MCP tools to disable (comma-separated, optional)"
		},
		{
			"id": "default_workdir",
			"type": "promptString",
			"description": "Enter the default working directory for shell commands (optional)"
		},
		{
			"id": "security_mode",
			"type": "promptString",
			"description": "Enter the security mode (permissive, restrictive, custom)"
		}
	]
}
